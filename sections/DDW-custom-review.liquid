{% schema %}
{
  "name": "DDW custom review",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "client_review",
      "name": "Client review",
      "settings": [
        {
          "type": "text",
          "id": "client_name",
          "label": "Client name"
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review text"
        },
        {
          "type": "image_picker",
          "id": "client_photo",
          "label": "Client photo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DDW custom review"
    }
  ]
}
{% endschema %}
