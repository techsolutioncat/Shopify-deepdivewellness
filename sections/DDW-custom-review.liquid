{% style %}
  #shopify-section-{{section.id}} .section-content {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    Background: {{ section.settings.background_color }};
  }
  #shopify-section-{{section.id}} .section-title {
    line-height: 119%;
    text-align: center;
    letter-spacing: -0.01em;
    color: #0F2038;
  }
  #shopify-section-{{section.id}} .section-title strong {
    color: #01BAC4;
  }
  #shopify-section-{{section.id}} .section-content .section-subtitle {
    line-height: 180%;
    /* identical to box height, or 36px */
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #01BAC4;
  }
  #shopify-section-{{section.id}} .section-content .section-subtitle p {
    margin: 0px;
  }
  #shopify-section-{{section.id}} .client-name {
    line-height: 180%;
    color: #1B1B1B;
  }
  #shopify-section-{{section.id}} .review-text {
    line-height: 180%;
    color: #242424;
  }
  #shopify-section-{{section.id}} .review-wrap {
    display: flex;
    align-items: center;
    gap: 40px;
  }
  #shopify-section-{{section.id}} .review-image-wrap {
    display: flex;
    width: 405px;
    flex-wrap: wrap;
    gap: 5px;
  }
  #shopify-section-{{section.id}} .review-image-wrap .client-photo {
    width: 191px;
    height: 191px;
  }
  #shopify-section-{{section.id}} .review-image-wrap .client-photo img {
    width: 100%;
    height: 100%;
  }
  #shopify-section-{{section.id}} .review-text-wrap {
    width: calc(100% - 405px);
  }
  #shopify-section-{{section.id}} .client-review {
    margin-bottom: 31px;
  }
  #shopify-section-{{section.id}} .section-main-content {
    background: #FFFFFF;
    border-radius: 20px;
    padding: 40px;
    margin-top: 40px;
  }
  @media (max-width: 999px) {
    #shopify-section-{{section.id}} .review-wrap {
      flex-direction: column;
    }
    #shopify-section-{{section.id}} .review-image-wrap {
      width: 100%;
      justify-content: center;
    }
    #shopify-section-{{section.id}} .review-text-wrap {
      width: 100%;
    }
  }
  @media (max-width: 500px) {
    #shopify-section-{{section.id}} .section-main-content {
      padding: 16px;
    }
    #shopify-section-{{section.id}} .review-image-wrap .client-photo {
      width: calc(50% - 5px);
      height: 150px;
    }
    #shopify-section-{{section.id}} .section-title {
      font-size: 32px !important;
    }
    #shopify-section-{{section.id}} .section-title br {
      display: none;
    }
    #shopify-section-{{section.id}} .section-subtitle {
      font-size: 16px !important;
    }
    #shopify-section-{{section.id}} .client-review .client-name {
      font-size: 16px !important;
    }
    #shopify-section-{{section.id}} .client-review .review-text {
      font-size: 15px !important;
    }
    /* #shopify-section-{{section.id}} .review-wrap {
      margin-top: 32px;
    } */
    #shopify-section-{{section.id}} .section-content {
      padding-top: 50px;
      padding-bottom: 50px;
    }
  }
{% endstyle %}

<div class="section-content">
  <div class="section-header page-width">
    {% if section.settings.subtitle != blank %}
      <div class="section-subtitle h3 fs-20 fw-600 font__Poppins text-align-center font-white">
        {{ section.settings.subtitle }}
      </div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <div class="section-title font-bold rte fs-50 fw-700 font__Lexend-Deca text-align-center font-white">
        {{ section.settings.heading }}
      </div>
