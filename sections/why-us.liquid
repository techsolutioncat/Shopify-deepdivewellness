{% style %}
    #shopify-section-{{section.id}} .section-content {
        background: {{ section.settings.color }};
    }
    #shopify-section-{{section.id}} .section-content .section-main-container {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #shopify-section-{{section.id}} .wrapper .blocks {
        display: flex;
        text-align: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-top: 50px;
    }
    #shopify-section-{{section.id}} .wrapper .block {
        width: calc(33.33% - 20px);
        padding: 20px 20px 70px 20px;
        border-radius: 120px;
    }
    #shopify-section-{{section.id}} .wrapper .block .block-image {
        min-height: 115px;
    }
    #shopify-section-{{section.id}} .wrapper .block .block-image img {
        width: 100%;
        object-fit: cover;
        border: 1px solid rgb(var(--color-base-accent-2));
        border-radius: 90px;
    }
    #shopify-section-{{section.id}} .wrapper .block .block-title {
        margin-top: 30px;
        color: #fff;
    }
    #shopify-section-{{section.id}} .wrapper .block .block-text {
        color: #fff;
    }
    #shopify-section-{{section.id}} .wrapper .block-1 {
        background: linear-gradient(180deg, #2B3B4C 0%, rgb(var(--color-base-accent-2)) 100%);
    }
    #shopify-section-{{section.id}} .wrapper .block-0 {
        background: linear-gradient(0deg, #2B3B4C 0%, rgb(var(--color-base-accent-2)) 100%);
    }
    @media(max-width: 1000px) {
        #shopify-section-{{section.id}} .wrapper .block {
            width: calc(50% - 20px);
            padding: 50px;
        }
    }
    @media(max-width: 768px) {
        #shopify-section-{{section.id}} .wrapper .block {
            width: 100%;
        }
    }
{% endstyle %}

<div class="section-content">
    <div class="section-main-container">
        <div class="wrapper page-width">
            {% if section.settings.title != blank %}
                <div class="section-title text-align-center {{ section.settings.font_size }}">{{ section.settings.title}}</div>
            {% endif %}
            {% if section.settings.text != blank %}
                <p class="section-text text-align-center">{{ section.settings.text }}</p>
            {% endif %}
            <div class="blocks">
                {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                        <div class="block block-{{ forloop.index | modulo: 2 }}">
                            <div class="block-image">
                                {% if block.settings.icon != blank %}
                                    <img src="{{ block.settings.icon | image_url: width: 500 }}">
                                {% endif %}
                            </div>
                            {% if block.settings.title != blank %}
                                <div class="block-title {{ block.settings.font_size }}">{{ block.settings.title }}</div>
                            {% endif %}
                            {% if block.settings.text != blank %}
                                <div class="block-text">{{ block.settings.text }}</div>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>

