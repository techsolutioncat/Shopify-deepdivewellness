{% style %}
  #shopify-section-{{section.id}} .heading strong {
    color: #01BAC4;
  }
  #shopify-section-{{section.id}} .block-text {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 24px;
  }
  #shopify-section-{{section.id}} .section-link {
    position: relative;
  }
  #shopify-section-{{section.id}} .section-link img {
    position: absolute;
    top: -16px;
    margin-left: 24px;
  }
  #shopify-section-{{section.id}} .section-link .mobile-click-image {
    display: none;
  }
  @media(max-width: 1000px) {
    #shopify-section-{{section.id}} .block-text {
      flex-direction: column;
      gap: 5px;
    }
    #shopify-section-{{section.id}} .block-text p {
      margin: 0px;
      color: #000;
    }
  }
  @media(max-width: 749px) {
    #shopify-section-{{section.id}} .block-area {
      display: flex;
      justify-content: center;
    }
    #shopify-section-{{section.id}} .block-text {
      align-items: flex-start;
    }
    #shopify-section-{{section.id}} .heading {
      font-size: 31px !important;
    }
    #shopify-section-{{section.id}} .section-link .mobile-click-image {
      display: block;
    }
    #shopify-section-{{section.id}} .section-link .desktop-click-image {
      display: none;
    }
    #shopify-section-{{section.id}} .section-link img {
      position: relative;
      top: 0px;
      margin-left: 0px;
    }
    #shopify-section-{{section.id}} .section-link {
      display: flex;
      flex-direction: column;
      gap: 8px;
      align-items: center;
    }
  }
{% endstyle %}

<div class="section-content">
  <div class="page-width text-align-center">
    {% if section.settings.heading != blank %}
      <h2 class="heading fw-700 fs-50 font__Lexend-Deca">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="main-container">
      <div class="section-link">
        {% if section.settings.mobile_click_image != blank %}
          <img class="mobile-click-image" src="{{ section.settings.mobile_click_image | image_url: width: 200 }}">
        {% endif %}
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="site-button">{{ section.settings.button_text }}</a>
        {% endif %}
        {% if section.settings.click_image != blank %}
          <img class="desktop-click-image" src="{{ section.settings.click_image | image_url: width: 200 }}">
        {% endif %}
      </div>
      <div class="block-area">
        <div class="block-text">
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {% if block.settings.block_text != blank %}
                <p class="fs-13 fw-500 font__Poppins">
                  <svg width="17" height="16" viewBox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1.70606 7.30713C1.38301 7.30804 1.06682 7.40039 0.794072 7.5735C0.521322 7.7466 0.303156 7.9934 0.164815 8.28532C0.0264738 8.57725 -0.0263893 8.90238 0.0123415 9.22309C0.0510724 9.54381 0.179814 9.84701 0.383673 10.0976L4.72946 15.4212C4.88441 15.6136 5.08303 15.7662 5.30882 15.8665C5.53462 15.9667 5.78106 16.0116 6.02769 15.9975C6.55518 15.9691 7.0314 15.687 7.33503 15.223L16.3623 0.684527C16.3638 0.682115 16.3654 0.679704 16.367 0.677328C16.4516 0.547275 16.4242 0.289544 16.2494 0.127634C16.2013 0.0831714 16.1447 0.049012 16.083 0.0272591C16.0212 0.00550627 15.9557 -0.00337947 15.8904 0.00114937C15.8251 0.00567821 15.7615 0.0235258 15.7033 0.0535926C15.6452 0.0836594 15.5938 0.125309 15.5524 0.175977C15.5492 0.17996 15.5458 0.183884 15.5424 0.187747L6.43823 10.4741C6.40358 10.5132 6.36151 10.5451 6.31445 10.5678C6.26738 10.5906 6.21627 10.6038 6.16407 10.6066C6.11188 10.6094 6.05964 10.6018 6.0104 10.5843C5.96116 10.5668 5.91589 10.5396 5.87723 10.5044L2.85573 7.75485C2.54192 7.46718 2.13176 7.30746 1.70606 7.30713Z" fill="#01BAC4"/>
                  </svg>
                  {{ block.settings.block_text }}
                </p>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "DDW shop link",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "click_image",
      "label": "Click image"
    },
    {
      "type": "image_picker",
      "id": "mobile_click_image",
      "label": "Mobile image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "block_text",
      "name": "Block text",
      "settings": [
        {
          "type": "text",
          "id": "block_text",
          "label": "Block text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DDW shop link"
    }
  ]
}
{% endschema %}
