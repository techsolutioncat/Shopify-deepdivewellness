{% style %}
  #shopify-section-{{section.id}} .section-content {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  #shopify-section-{{section.id}} .content-wrap {
      gap: 60px;
  }
  #shopify-section-{{section.id}} .heading {
      letter-spacing: -0.01em;
      margin-top: 0px;
      margin-bottom: 32px;
  }
  #shopify-section-{{section.id}} .heading p {
    margin: 0px;
  }
  #shopify-section-{{section.id}} .heading img {
    margin-top: 12px;
  }
  #shopify-section-{{section.id}} .heading strong {
      color: #01BAC4;
  }
  #shopify-section-{{section.id}} .section-text-wrap {
    margin-bottom: 50px;
  }
  #shopify-section-{{section.id}} .section-text {
      line-height: 180%;
      color: #242424;
      margin-top: 0px;
      margin-bottom: 5px;
      display: flex;
      align-items: center;
  }
  #shopify-section-{{section.id}} .section-text p {
    margin: 0px;
    margin-left: 8px;
  }
  #shopify-section-{{section.id}} .block-text {
      display: flex;
      justify-content: center;
      gap: 13px;
      margin-top: 38px;
  }
  #shopify-section-{{section.id}} .block-text .text {
      line-height: 100%;
  }

  @media (max-width: 1000px) {
      #shopify-section-{{section.id}} .content-wrap {
          flex-direction: column;
          gap: 0px;
      }
      #shopify-section-{{section.id}} .content-wrap .text-content,
      #shopify-section-{{section.id}} .content-wrap .image-content
      {
          width: 100%;
      }
      #shopify-section-{{section.id}} .left-image {
          display: block;
          text-align: center;
      }
      #shopify-section-{{section.id}} .right-image {
          display: none;
      }
      #shopify-section-{{section.id}} .heading,
      #shopify-section-{{section.id}} .section-button {
          text-align: center;
      }
  }
  @media (max-width: 749px) {
      #shopify-section-{{section.id}} .heading br {
        display: none;
      }
      #shopify-section-{{section.id}} .heading {
         font-size: 32px !important;
      }
      #shopify-section-{{section.id}} .section-text {
          font-size: 14px !important;
      }
      #shopify-section-{{section.id}} .block-area {
          display: flex;
          justify-content: center;
      }
      #shopify-section-{{section.id}} .block-text {
          align-items: flex-start;
          flex-direction: column;
          gap: 10px;
          margin-top: 29px;
      }
      #shopify-section-{{section.id}} .section-content {
          padding-top: 50px;
          padding-bottom: 50px;
      }
      #shopify-section-{{section.id}} .left-image img {
          object-fit: cover;
          width: 100%;
      }
  }
{% endstyle %}

<div class="section-content page-width">
  {% comment %} Begin text content {% endcomment %}
  <div class="content-wrap d-flex">
    <div class="half-width image-content left-image {% if section.settings.layout == 'right_image' %} display-none {% endif %}">
      {% if section.settings.section_image != blank %}
        <img src="{{ section.settings.section_image | image_url: width: 1000 }}">
      {% endif %}
    </div>

    <div class="half-width text-content">
      {% if section.settings.heading != blank %}
        <h2 class="heading fw-700 fs-44 font__Lexend-Deca">
          {{ section.settings.heading | split: '</p>' }}
          {% if section.settings.heading_image != blank %}
            <img src="{{ section.settings.heading_image | image_url: width: 300 }}">
          {% endif %}
        </h2>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="section-text-wrap">
          {% for block in section.blocks %}
            {% if block.settings.block_text != blank %}
              <div class="section-text fw-500 fs-17 font__Poppins">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <g style="mix-blend-mode:multiply">
                  <path d="M9 0C4.02943 0 0 4.02943 0 9C0 13.9706 4.02943 18 9 18C13.9706 18 18 13.9706 18 9C18 4.02943 13.9706 0 9 0ZM7.7143 12.9351L3.81818 9.03895L5.18186 7.67528L7.71427 10.2078L12.4967 5.42531L13.8604 6.78899L7.7143 12.9351Z" fill="#ABDA2E"/>
                  </g>
                </svg>
                {{ block.settings.block_text }}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
      {% if section.settings.button_link != blank %}
        <div class="section-button d-flex">
          <a href="{{ section.settings.button_link }}" class="site-button">{{ section.settings.button_text }}</a>
        </div>
      {% endif %}
      <div class="block-area">
        <div class="block-text">
          {% if section.settings.text1 != blank %}
            <p class="text fs-13 fw-500 font__Poppins m-0">
